// Large devices (desktops, 62em and up)
@media (max-width: 991px)
	/**********************
       INDEX
    **********************/
	.grid 
		width 90%
		
	.aboutHome
		height 540px
		.text
			h2
				font-size 2em
				
	.mainContain
		ul.project
			li
				width 50%
				
				&:nth-child(3)
					order 4
				
				&:nth-child(4)
					width 100%
					order 3
					
				&:nth-child(6)
					display none
					
				&:nth-child(8)
					order 5
					
				&:nth-child(5)
					order 6
					
				&:nth-child(7)
					order 7

	
