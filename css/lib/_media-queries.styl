/*
	MEDIA QUERIES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
@media (max-width: 1920px)
	/**********************
		INDEX
    **********************/
	.headerContact
		height 25em
		background-position center center
    	
@media (max-width: 1400px)
	/**********************
		INDEX
    **********************/
	.grid
		width 1000px

    		
@media (max-width: 1297px)
	/**********************
		INDEX
    **********************/
	.headerContact
		background-position center top
		background-size cover
		
	.grid
		width 90%
		

	
	/**********************
        MODALES
    **********************/
    	
@media (max-width: 1166px)
	/**********************
		INDEX
    **********************/
	.logos li
		width 11em
				

// Large devices (desktops, 62em and up)
@media (max-width: 991px)
	/**********************
       INDEX
    **********************/
	.grid 
		width 90%
		
	.headerHome-message
		margin-top 10em
		h1
			font-size 2.3em
		
	.logos li
		width 9em
		
	.proyectWin li 
		figure
			width 27em
		.text
			width calc(100% - 27em)
	
	/**********************
        ERROR 404
    **********************/


// Medium devices (tablets, 48em and up)
@media (max-width: 769px)
	/**********************
        LOGIN
    **********************/			
	body
		font-size 15px
	
		
	/**********************
    	HOME
    **********************/
	.proyectWin li 
		figure
			width 20em
		.text
			width calc(100% - 20em)
			padding-top 4em


@media (max-width: 630px)
	/**********************
    	HEADER
    **********************/	
	.header
		&-bgAboutDesktop
			background white
    	
	/**********************
    	INDEX
    **********************/			
	body
		font-size 15px
		
	.proyectWin li
		margin-bottom 3.5em
		flex-center()
		
		figure
			width 20em
		.text
			width 100%
			padding-top 0em
			margin-top -1.5em
			text-align center
			&-title
				flex-center()
				figure
					display none
				h3
					width initial
					
	.mainContain ul.project li
		width 49%

							
	/**********************
        CONTACT
    **********************/
	.messageInit
		width 90%
		padding 1em
		form
			width 90%
			



// Small devices (landscape phones, 415px and up)
@media (max-width: 415px)
	body
		font-size 12px	
				
	/**********************
        INDEX
    **********************/
	.header
		padding-top .8em
		.headerWhite
			h1
				width 4em
					
	.headerContact-message
		h3
			font-size 1.3em
			
	.headerHome-message h1
		width 100%
			
	.logos li
		width 33%
		margin-bottom 1em
		
	.proyectWin li
		figure
			width 30em
		.text 
			margin-top -2.5em
			h3 
				font-size 1.5em
				padding 0
			p
				font-size 1em
					
			
	/**********************
        CONTACT
    **********************/
	.messageInit
				
		form
			width 90%
			.itemForm
				label
					font-size 1.2em
				figure
					font-size 1.4em
					top .7em
			
	.btn-main
		padding 1em 2em
		p
			font-size 1.1em
