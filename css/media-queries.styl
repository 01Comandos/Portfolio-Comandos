// Medium devices (tablets, 48em and up)
@media (max-width: 769px)
	/**********************
        LOGIN
    **********************/			
	body
		font-size 14px
	
	.header
		&-diagonal
			.wrapper
				.back-contact
					background: url(../img/bibliotecaTablet.png) no-repeat center center
					background-attachment fixed
					background-size cover
					background-color #8283A7
		
	/**********************
    	HEADER
    **********************/
		
	
	/**********************
        INDEX
    **********************/


@media (max-width: 630px)
	/**********************
    	INDEX
    **********************/			
	body
		font-size 14px
	.header
		&-title
			.item
				width 100%
				&:nth-child(1)
				&:nth-child(3)
					width 75%
					margin 0
				&:nth-child(1)
					background none
					li
						a
							border 2px solid white
							border-radius 50%
							width 2em
							height 2em
							text-align center
							padding-top 0.3em
				&:nth-child(2)
					margin 2em 0 -2em 0
		&-subtitle
			margin-top 1em
		
	.portfolio
		&-container
			.card
				width 100%
				height auto
				&:nth-child(1)
				&:nth-child(2)				
				&:nth-child(4)					
				&:nth-child(5)				
				&:nth-child(6)
				&:nth-child(8)					
				&:nth-child(9)
					margin-top 0em

							
	/**********************
        FOOTER
    **********************/											   	


