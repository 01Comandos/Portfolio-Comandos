.formLogin
	.itemForm
		position relative
		width 100%
		label
			font-weight normal !important
			font-family 'SFNS-Regular'
			color rgba(gris-texto .7)
			font-size 1em
			left 2.6em
			height 1.5em
			&.active
				background white
				height 1.5em
				padding 0 .6em
				color azul-corporativo
				transform translateY(-12px) scale(.8)
		
		input:focus
		textarea:focus
			border 1px solid azul-corporativo !important
			box-shadow none !important
			figure
				color verde-corporativo
			
		input
		textarea
			text-indent 2.6em
			margin-bottom .5em
			border 1px solid #F2F2F2
			
		textarea
			resize none
			min-height 5em
			max-height 7em
			overflow auto
			padding-top .5em
			
		figure
			position absolute
			top .5em
			left .6em
			font-size 1.2em
			color rgba(black .35)
			transition .2s linear
			background white
			
		.mg-error
			font-size .8em
			color gris-texto
			color red
			font-family 'SFNS-Regular'
					
	.btn-c
		text-align center
		
					
				
	/.submit
		text-align center
		margin-top .5em
		p
			text-align center
			margin-top 1em
			a
				color purpura
				transition .2s linear 
				&:hover
					color rojo-corporativo


/*
    CONTACTO
--------------------------------------------------------------
--------------------------------------------------------------*/
.messageInit
	.title
		text-align center
		border-bottom 1px solid rgba(gris-texto .1)
		padding-bottom 1em
		figure
			width 4em
			margin 0 auto
			img
				width 100%
				
		h2
			color blueClaro
		p
			margin 0
	form
		width 400px
		margin 2em auto 0 auto


.messageEnd
	text-align center
	margin-bottom 6em
	figure
		width 7em
		margin 0 auto
		img
			width 100%
	
	h2
		font-size 2.4em
		color blueClaro	
	p
		margin 0

/*
    FOOTER
--------------------------------------------------------------
--------------------------------------------------------------*/

.footer
	margin-top 3em
	text-align center
	h5
		margin-bottom 8em
		
	&-item
		background white
		box-shadow: 0 -3px 18px 0 rgba(205,192,192,0.50)
		height 45px
		padding 1em 0
		flex-center()
		
		position fixed
		bottom 0
		left 0
		right 0
		z-index 10
		
		.item-social
			height 30px
			margin-top .5em
			flex-center()
			li
				margin-right .9em
				a
					display inline-block
					font-size 1.7em
					color gris-texto
					&:hover
						transition .2s linear
				
				&:nth-child(2)
				&:nth-child(3)
					a
						font-size 1.4em
						padding-top .1em
						
				&:nth-child(4)
					a
						font-size 1.5em
						
				&:nth-child(5)
					a
						font-size 1.5em
						padding-top .1em
						
				&:last-child
					margin-right 0
					
		.item-text
			border-left 1px solid rgba(gris-texto .4)
			padding-left 1em
			margin-left 1em
			p
				width 9em
				text-align left
				margin 0
				font-size .9em
				padding-top .3em
				strong
					font-family 'SFNS-Bold'

