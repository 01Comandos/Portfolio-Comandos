/*
	IMPORTACIONES
--------------------------------------------------------------
--------------------------------------------------------------*/
@import 'nib'
@import 'lib/_style-icon.styl'
@import 'lib/_variables-colors.styl'
@import 'lib/_mixins.styl'

    
/*
	CLASES GENERALES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
.btn-main
	font-family 'Poppins-Medium',sans-serif
	background white
	padding 0.8em 1.3em
	border-radius 5px
	transition .2s linear
	display inline-block
	letter-spacing -0.13px
	position relative
	box-shadow: 0 2px 7px 0 rgba(105,99,99,0.56)
	p
		color blueClaro
		text-align center
		font-size .9em
		text-transform uppercase
		margin 0
	
	&:hover
		background #5187F1
		box-shadow 0 2px 11px 4px rgba(42,52,72,0.29)
		p
			color white
		
	&:active
		transform scale(.95)
		
.btn-form
	background #5187F1
	p
		color white
	

/*
    HEADER
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
body
	font-size 16px
	background gris-A
	margin 0
	padding 0

.header
	position relative
	z-index 2
	padding-top .3em
	.headerWhite
		position relative
		z-index 5
		flex-between()
	
		h1
			width 3em 
			a
				width 100%
				padding-top .7em
				img
					width 100%
				
		nav
			box-shadow none
			padding-top .4em
					
.headerContact
	height 25em
	background url(../img/background-contact@2x.png) no-repeat center top
	//background-size contain
	background-color white
	//background-color red
	//opacity: 0.66;
	//background-image: linear-gradient(0deg, #27BDFF 0%, #6B69FF 100%);
	
	&-message
		text-align center
		color white
		padding-top 6em
		h1
			font-size 2.5em
			font-family 'Poppins-Medium',sans-serif
		h3
			font-size 1.6em
			font-family 'Poppins-Light', sans-serif
			

.headerMessageEnd
	height 25em
	background url(../img/background-messageEnd@2x.png) no-repeat center top
	background-color white
	
.headerHome
	height 35em !important
	background url(../img/background-home@2x.png) no-repeat center top
	background-color white
	&-message
		color white
		margin-top 7em
		h1
			font-size 3em
			width 13em
			
		h3
			font-size 1.3em
			font-family 'Poppins-Light'



/*
    INDEX
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/

.mainContain
			
	h3
		font-size 1.4em
		color gris-texto
		text-align center
		margin-bottom 1em
		
	ul.project
		margin-bottom 4em
		flex-between()
		li
			width 33%
			a
				display inline-block
				cursor pointer
				img
					transition .2s linear
					width 100%
					
				&:hover img
					filter blur(2px)

.logos
	padding 2em 0
	flex-center()
	li 
		width 12em
		text-align center
		img
			width 90%
		&:nth-child(1)
			img 
				padding-top 1.2em
				
		&:nth-child(3)
			img 
				padding-top .8em
				
		&:nth-child(4)
			img
				width 50%
				
		&:nth-child(5)
			img
				padding-top 1em
				
.proyectWin
	li
		margin-bottom .5em
		flex-between()
		figure
			width 35em
			a
				display inline-block
				img
					width 100%
					
		.text
			width calc(100% - 35em)
			padding-top 7em
			&-title
				margin-bottom 1em
				flex-flexStart()
				figure
					width 2.5em
					img
						width 100%
				h3
					font-size 1.2em
					font-family 'Poppins-Bold'
					width 10em
					padding-left 1em

.formLogin
	.itemForm
		position relative
		width 100%
		label
			font-weight normal !important
			font-family 'Poppins-Regular'
			color rgba(gris-texto .7)
			font-size 1em
			left 2.6em
			height 1.5em
			&.active
				background white
				height 1.5em
				padding 0 .6em
				color azul-corporativo
				transform translateY(-12px) scale(.8)
		
		input:focus
		textarea:focus
			border 1px solid azul-corporativo !important
			box-shadow none !important
			figure
				color verde-corporativo
			
		input
		textarea
			text-indent 2.6em
			margin-bottom .5em
			border 1px solid #F2F2F2
			
		textarea
			resize none
			min-height 5em
			max-height 7em
			overflow auto
			padding-top .5em
			
		figure
			position absolute
			top .5em
			left .6em
			font-size 1.2em
			color rgba(black .35)
			transition .2s linear
			background white
			
		.mg-error
			font-size .8em
			color gris-texto
			color red
			font-family 'Poppins-Regular'
					
	.btn-c
		text-align center


/*
    CONTACTO
--------------------------------------------------------------
--------------------------------------------------------------*/
.messageInit
	position relative
	z-index 4
	margin -7em auto 0
	background white
	box-shadow 0 0 10px 7px rgba(0,0,0,0.04)
	border-radius 4px
	width 560px
	padding 2em
	
	h2
		text-align center
		font-size 1.2em
		margin-top .7em
		
	form
		width 80%
		margin 2em auto 0
		input
		label.active
			font-family 'Poppins-Regular'

/*
    FOOTER
--------------------------------------------------------------
--------------------------------------------------------------*/

.footer
	margin-top 3em
	text-align center
	h5
		margin 1em 0
		
	.item-social
			height 30px
			margin-top .5em
			flex-center()
			li
				margin-right .9em
				a
					display inline-block
					font-size 1.7em
					color gris-texto
					&:hover
						transition .2s linear
				
				
						
				&:last-child
					margin-right 0
					

