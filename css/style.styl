@import 'nib'
@import 'lib/_style-icon.styl'
@import 'lib/_variables-colors.styl'
@import 'lib/_mixins.styl'

    
/*
	CLASES GENERALES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
.btn-main
	margin-top 1em
	color white !important
	font-family 'SFNS-Regular',sans-serif
	background naranja-corporativo !important
	padding 0.8em 1.3em
	border-radius 5px
	transition .2s linear
	display inline-block
	letter-spacing -0.13px
	position relative
	box-shadow: 0 2px 7px 0 rgba(105,99,99,0.56)
	p
		color white
		text-align center
		font-size .9em
		text-transform uppercase
	
	&:hover
		background verde-corporativo!important
		box-shadow 0 0 15px 0 #8BB339
		
	&:active
		transform scale(.95)
	

/*
    HEADER
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
body
	font-size 16px
	background gris-A
	margin 0
	padding 0

.header
	position relative
	z-index 2
	.headerWhite
		position relative
		z-index 5
		flex-between()
		
		h1 a
			font-size 3em
			color white
			
		&-item a
			color white
			font-size 2em
			padding-top .7em
			
	.headerColor
		h1 a
			width 1.1em
			position relative
			top -.25em
			img
				width 100%
			
		.headerWhite-item a
			color #5187F1
		
	&-title
		margin-top 3em
		position relative
		z-index 3
		flex-center()
		
		figure
			width 9em
			img
				box-shadow 0 2px 15px 0 rgba(0,0,0,0.50)
				border-radius 50%
				width 100%
				
		.item
			margin .6em 0 0 1.3em
			color white
			h2
				font-size 2.8em
				font-family 'SFNS-Light'
				letter-spacing 0.94px
				line-height 48px
				strong
					font-family 'SFNS-Medium'
			h3
				text-align right
				font-family 'SFNS-Light'
				letter-spacing 0.94px
				//text-transform uppercase
				font-size 1.3em
				
	&-diagonal
		z-index 2
		display block
		margin-top -43em
		width 100%
		background #8283A7
		transform skew(0deg,-10deg)
		position relative
		overflow hidden
		transition all .5s ease-in-out
		left 0
		opacity 1
		.wrapper
			width 100%
			padding 29em 0em
			position relative
			.back-contact
				position absolute
				background: url(../img/biblioteca-header.png) no-repeat center bottom
				background-attachment fixed
				background-size cover
				background-color #8283A7
				top 16em
				left 0
				right 0
				bottom -16em
				transform skew(0,10deg)
		&:after
			content: '';
			position: absolute;
			z-index: 1;
			display: block;
			float: left;
			transform: skew(0deg,0deg);
			bottom: 0;
			left: 0;
			transition: all .5s ease-in-out;
			opacity: 1;
			width: 100%
			height: 0px;
			border-style: solid;
			border-width: 0 1200px 17px 0;
			//border-color: transparent transparent azul-2 transparent;
			border-color: #6B69FF

/*
    INDEX
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/

.aboutHome
	position relative
	z-index 4
	height 600px
	flex-between()
	
	.text
		padding-top 9em
		width 56%
		h2
			font-size 2.2em
			font-family 'SFNS-Light'
			margin-bottom 1em
			strong
				font-family 'SFNS-Medium'

	figure
		width 400px
		position relative
		top -10em
		img
			width 100%

.mainContain
	&-title
		text-align center
		margin-bottom 2.5em
		flex-center()
		figure
			font-size 1.8em
			padding .2em .4em 0 0
			
		h3
			color gris-texto
			strong
				color azul-corporativo
		
	ul.project
		margin-bottom 4em
		flex-between()
		li
			width 33%
			a
				display inline-block
				cursor pointer
				img
					transition .2s linear
					width 100%
					
				&:hover img
					filter blur(2px)
			
			&:nth-child(4)
				width 66%
				
	ul.stack
		width 500px
		margin 0 auto 4em auto
		flex-between()
		li
			width 15%
			margin-bottom 2em
			img 
				width 80%
				
			&:nth-child(2)
				img
					width 60%
					
			&:nth-child(9)
				padding-top .7em
				img
					width 90%
					
	&.stackContain
		background gris-bg
		padding 3em 1em 0em 1em

