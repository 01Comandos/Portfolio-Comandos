/*
	IMPORTACIONES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
@import 'nib'
@import 'style-icon.styl'


@font-face 
    font-family 'Cabin-Regular'
    src url('../fonts/Cabin-Regular.ttf')
    
@font-face 
    font-family 'Cabin-Medium'
    src url('../fonts/Cabin-Medium.ttf')
    
@font-face 
    font-family 'Cabin-SemiBold'
    src url('../fonts/Cabin-SemiBold.ttf')
    
@font-face 
    font-family 'Rancho-Regular'
    src url('../fonts/Rancho-Regular.ttf')
    
@font-face 
    font-family 'Oregano-Regular'
    src url('../fonts/Oregano-Regular.ttf')
    
@font-face 
    font-family 'Abel-Regular'
    src url('../fonts/Abel-Regular.ttf')

/*
	VARIABLES
-------------------------------------------------------------------------*/
gris-A = #eff4f7
negro-texto = #4d4d4d

azul-titulo = #003772
azul-1 = #536dfe
azul-2 = #3fa9f5

naranja = #fc6d26
amarillo = #ffda44

fucsia = #ff545c


/*
	MIXINS
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
flex-center()
	display flex
	flex-wrap wrap
	justify-content center
	
flex-around()
	display flex
	flex-wrap wrap
	justify-content space-around
	
flex-between()
	display flex
	flex-wrap wrap
	justify-content space-between
	
flex-flexStart()
	display flex
	flex-wrap wrap
	justify-content flex-start

degradado()
  background linear-gradient(90deg, rgba(148, 50, 107, 1) 0%, rgba(78, 115, 174, 1) 100%)
    

/*
	CLASES GENERALES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/

h1
h2
h3
h4
h5
	margin 0
	padding 0


p
	font-size 1em
	color negro-texto
	font-family 'Abel-Regular',sans-serif

	
ul
	margin 0 
	padding 0
	li
		list-style none
a:hover
	text-decoration none
/*
    HEADER
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
body
	font-size 16px
	background gris-A

.header
	&-title
		margin-top 6em
		position relative
		z-index 3
		flex-center()
		.item
			/.socialmedia
			&:nth-child(1)
				flex-between()
				background azul-2
				width 20em
				padding 1em 1.2em 1em 1em
				height 4.5em
				margin-right -0.9em
				li
					a
						display inline-block
						font-size 1.7em
						color white
						transition .2s linear
						border-bottom 2px solid transparent
						&:hover
							border-bottom 2px solid white
			&:nth-child(2)
				position relative
				top -1.2em
				figure
					width 7em
					margin 0 auto
					img
						width 100%
						border-radius 50%
						border 5px solid azul-2
			&:nth-child(3)
				width 20em
				margin-left -1.3em
				ul
					flex-between()
					background azul-2					
					padding 0.5em 1em
					li
						width 30%
						text-align center
						a
							display inline-block
							font-size 1.7em
							color white
							transition .2s linear
							border-bottom 2px solid transparent							
							h3
								font-size 0.5em !important
								font-family 'Cabin-Regular'
							&:hover
								border-bottom 2px solid white
	&-subtitle
		text-align center
		position relative
		z-index 3
		h1
			font-size 2.3em
			font-family 'Rancho-Regular',sans-serif
			color white
		h2
			font-size 1.2em
			font-family 'Cabin-SemiBold',sans-serif
			color white
	&-diagonal
		z-index 2
		display block
		margin-top -52em
		width 100%
		background red
		transform skew(0deg,-10deg)
		position relative
		overflow hidden
		transition all .5s ease-in-out
		left 0
		opacity 1
		.wrapper
			width 100%
			padding 29em 0em
			position relative
			.back-contact
				position absolute
				background: url(../img/biblioteca-header.png) no-repeat center center;
				background-attachment fixed
				background-size cover
				background-color #8283A7
				top 16em
				left 0
				right 0
				bottom -16em
				transform skew(0,10deg)
		&:after
			content: '';
			position: absolute;
			z-index: 1;
			display: block;
			float: left;
			transform: skew(0deg,0deg);
			bottom: 0;
			left: 0;
			transition: all .5s ease-in-out;
			opacity: 1;
			width: 100%
			height: 0px;
			border-style: solid;
			border-width: 0 1200px 17px 0;
			border-color: transparent transparent azul-2 transparent;

/*
    INDEX
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
.portfolio	
	width 65em
	margin 2em auto 1em auto
	/.portfolio-title
		text-align center
		padding 2.5em 0 0 0
		h2
			font-size 2.2em
			font-family 'Oregano-Regular',sans-serif
		h3
			font-size 1.2em
			font-family 'Cabin-SemiBold',sans-serif
			margin 0.3em
		h4
			font-size 1.5em
			font-family 'Rancho-Regular',sans-serif
			a
				font-family 'Cabin-SemiBold',sans-serif
				font-size 1em
				color fucsia
		
			
	&-container
		flex-between()
		padding 2em 1.5em
		.card
			background white
			width 30%
			margin-bottom 1.5em
			border-radius 0 0 5px 5px
			height 27em
			box-shadow 1px 3px 5px rgba(0, 0, 0, 0.09)
			figure				
				img
					width 100%
					border-radius 5px 5px 0 0
			&-resum
				text-align center
				padding 1em				
				h2
					font-size 1.4em
					color azul-2
					font-family 'Cabin-Medium',sans-serif
					margin 0 0 0.5em 0
				&-link
					padding 0.5em 0
					a
						display inline-block
						color fucsia
						border 1px solid fucsia
						border-radius 9px
						font-size 0.9em
						font-family 'Cabin-Regular',sans-serif
						padding 0.5em 1em
						transition .2s linear
						strong
							font-family 'Cabin-SemiBold',sans-serif
						&:hover
							background fucsia
							color white
							text-decoration none
							
			&:nth-child(1)
				margin-top 6em
			&:nth-child(2)
				margin-top 3em
				
			&:nth-child(5)
			&:nth-child(8)
				margin-top -3em
			
			&:nth-child(6)
			&:nth-child(9)
				margin-top -6em

.sobreMi
	&-container
		border-top 1px dashed negro-texto
		border-bottom 1px dashed negro-texto
		position relative
		z-index 3
		transform skew(0deg,-10deg)
		width 80%
		margin 8em auto	0 auto
		.portfolio-title
			transform skew(0,10deg)					
			figure
				width 7em
				margin 0 auto
				img
					width 100%
					border-radius 50%
					border 7px solid azul-1

		&-resumen
			margin 2em auto
			p
				font-family 'Cabin-Regular',sans-serif
				text-align center
				font-size 1.1em
				transform skew(0,10deg)
			ul
				flex-center()
				transform skew(0,10deg)
				padding-bottom 1em
				li
					font-size 2.5em
					color naranja
					margin-right 0.3em
					&:last-child
						margin-right 0
		
	.diagonal
		z-index 2
		display block
		margin-top -34em
		width 100%
		background amarillo
		transform skew(0deg,-10deg)
		position relative
		overflow hidden
		transition all .5s ease-in-out
		left 0
		opacity 1
		.wrapper
			width 100%
			padding 21em 0em
			position relative
			.back-contact
				position absolute
				background: url(../img/Petroaulas-entrada.png) no-repeat center center;
				background-attachment fixed
				background-size cover
				background-color amarillo
				top -16em
				left 0
				right 0
				bottom -16em
				transform skew(0,10deg)
		&:after
			content: '';
			position: absolute;
			z-index: 1;
			display: block;
			float: left;
			transform: skew(0deg,0deg);
			bottom: 0;
			left: 0;
			transition: all .5s ease-in-out;
			opacity: 1;
			width: 100%
			height: 0px;
			border-style: solid;
			border-width: 0 1200px 17px 0;
			border-color: transparent transparent azul-2 transparent;

footer
	background: url(../img/background-footer.png) no-repeat center center;
	background-attachment fixed
	background-size cover
	background-color azul-1
	padding-top 12em
	margin-top -11em	
	.footer-title
		color white
		position relative
		z-index 3
		padding 2.5em 1em
		.portfolio-title
			h2
				font-size 1.7em
			h3
				font-size 1em
		.socialmedia
			background none !important
			margin 0 auto
		.email
			flex-center()
			figure
				font-size 1.8em
			h5
				font-size 1em
				font-family 'Cabin-SemiBold',sans-serif
				padding-top 0.5em


